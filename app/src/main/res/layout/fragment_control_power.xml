<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dewaal.dan.dwhomecontrol.Control_Power_Fragment">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_room"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_margin="@dimen/button_padding_half"
                android:gravity="center" />

            <TextView
                android:text="Current Usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_current_power"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_margin="@dimen/button_padding_half"
                android:gravity="center" />

            <TextView
                android:text="Used Today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_day"
                android:textStyle="normal|bold"
                android:layout_margin="@dimen/button_padding_half"
                android:gravity="right|center_vertical"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Used this Week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_week"
                android:textStyle="normal|bold"
                android:layout_margin="@dimen/button_padding_half"
                android:gravity="right|center_vertical"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Used this Month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_month"
                android:textStyle="normal|bold"
                android:layout_margin="@dimen/button_padding_half"
                android:gravity="right|center_vertical"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Used this Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_year"
                android:textStyle="normal|bold"
                android:layout_margin="@dimen/button_padding_half"
                android:gravity="right|center_vertical"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="TVRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_tvroom"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/roominfo_power_0"
                android:id="@+id/img_pwr_tvroom" />

            <TextView
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_today_tvroom"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_week_tvroom"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_month_tvroom"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="850"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_year_tvroom"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Entrance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_entrance"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/roominfo_power_0"
                android:id="@+id/img_pwr_entrance" />

            <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_today_entrance"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_week_entrance"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_month_entrance"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="261"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_year_entrance"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Garage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_garage"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/roominfo_power_0"
                android:id="@+id/img_pwr_garage" />

            <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_today_garage"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_week_garage"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_month_garage"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="504"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_year_garage"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Deck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_deck"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/roominfo_power_0"
                android:id="@+id/img_pwr_deck" />

            <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_today_deck"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_week_deck"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_month_deck"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="228"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_year_deck"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="House Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_house"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/button_padding_half"
                android:layout_marginRight="@dimen/button_padding_half"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/homeinfo_power_0"
                android:id="@+id/img_pwr_house" />

            <TextView
                android:text="16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_today_house"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_week_house"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="157"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_month_house"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />

            <TextView
                android:text="1843"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_year_house"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical" />
        </TableRow>
    </TableLayout>
</FrameLayout>
